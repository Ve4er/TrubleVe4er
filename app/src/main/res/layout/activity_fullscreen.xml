<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.truble.exploit.myapplication3.FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/dummy_content"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="top|left|bottom|right|center_horizontal">

        <ImageButton
            android:layout_width="184dp"
            android:layout_height="184dp"
            android:id="@+id/imageButton"
            android:layout_gravity="left|top"
            android:src="@drawable/face1"
            android:contentDescription="" />

        <TextView
            android:layout_width="172dp"
            android:layout_height="68dp"
            android:text="@string/name"
            android:id="@+id/textView"
            android:layout_gravity="right|top"
            android:textColor="#1cffac"
            android:textSize="40sp"
            android:textIsSelectable="false"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="58dp"
            android:text="@string/age"
            android:id="@+id/textView2"
            android:textSize="40sp"
            android:textColor="#1cffac"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|right"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp" />

        <TextView
            android:layout_width="186dp"
            android:layout_height="68dp"
            android:text="@string/sity"
            android:id="@+id/textView3"
            android:layout_gravity="right|top"
            android:textColor="#1cffac"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="25dp" />

        <ImageButton
            android:layout_width="398dp"
            android:layout_height="405dp"
            android:id="@+id/imageButton2"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/geo"
            android:layout_marginTop="35dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttumtofight"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="#1cffac"
            android:textStyle="bold"
            android:textSize="44sp"
            android:singleLine="false"
            android:layout_marginBottom="30dp"
            android:allowUndo="false" />

    </FrameLayout>

</FrameLayout>
